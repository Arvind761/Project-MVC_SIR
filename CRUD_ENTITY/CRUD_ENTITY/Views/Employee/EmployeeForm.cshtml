@{
    ViewBag.Title = "EmployeeForm";
}

<h2>EmployeeForm</h2>
<table>
    <tr>
        <td>Employee Name :</td>
        <td><input type="text" id="txtname" /></td>
    </tr>

    <tr>
        <td>Employee Mobile :</td>
        <td><input type="text" id="txtmobile" /></td>
    </tr>

    <tr>
        <td>Employee Age :</td>
        <td><input type="text" id="txtage" /></td>
    </tr>

    <tr>
        <td></td>
        <td><input type="button" id="btnsave" value="Save" onclick="SaveData()" /></td>
    </tr>
</table>

<table id="tbl" border="5" style="background-color:maroon;color:white;width:1000px">
    <tr style="background-color:blue;height:40px">
        <th>Employee Id</th>
        <th>Employee Name</th>
        <th>Employee Mobile</th>
        <th>Employee Age</th>
        <th></th>
        <th></th>
    </tr>
</table>


<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script type="text/javascript">var Idd = 0;
    $(document).ready(function () {
        BindData();
    });

    function BindData() {
        $.ajax({
            url: 'Employee/ShowData',
            type: 'post',
            data: {},
            success: function (data) {
                $("#tbl").find("tr:gt(0)").remove();
                for (var i = 0; i < data.length; i++) {
                    $("#tbl").append('<tr style="height:40px"> <td>' + data[i].empid + '</td> <td>' + data[i].name + '</td> <td>' + data[i].mobile + '</td> <td>' + data[i].age + '</td> <td style="color:red"><input type="button" id="btndelete" value="Delete" onclick="DeleteData(' + data[i].empid + ')" /></td>  <td style="color:red"><input type="button" id="btnedit" value="Edit" onclick="EditData(' + data[i].empid + ')" /></td> </tr>');
                }
            },
            error: function () {
                alert('dt Not found !!');
            }
        });
    }



    function SaveData() {
        if ($("#btnsave").val() == "Save") {
            $.ajax({
                url: 'Employee/InsertData',
                type: 'post',
                data: { name: $("#txtname").val(), mobile: $("#txtmobile").val(), age: $("#txtage").val() },
                success: function () {
                    alert('Data Saved !!');
                    BindData();
                    Clear();
                },
                error: function () {
                    alert('Data Not Saved !!');
                }
            });
        }
        else if ($("#btnsave").val() == "Update") {
            $.ajax({
                url: 'Employee/UpdateData',
                type: 'post',
                data: { empid: Idd, name: $("#txtname").val(), mobile: $("#txtmobile").val(), age: $("#txtage").val() },
                success: function () {
                    alert('Data Updated !!');
                    BindData();
                    Clear();
                },
                error: function () {
                    alert('Data Not Updated !!');
                }
            });
        }
    }



    function DeleteData(empid) {
        $.ajax({
            url: 'Employee/DeleteData',
            type: 'post',
            data: { empid: empid },
            success: function () {
                alert('Data Deleted !!');
                BindData();
            },
            error: function () {
                alert('Data Not Deleted !!');
            }
        });

    }


    function Clear() {
        $("#txtname").val("");
        $("#txtmobile").val("");
        $("#txtage").val("");
        $("#btnsave").val("Save");
        Idd = 0;
    }


    function EditData(empid) {
        $.ajax({
            url: 'Employee/EditData',
            type: 'post',
            data: { empid: empid },
            success: function (data) {
                $("#txtname").val(data[0].name);
                $("#txtmobile").val(data[0].mobile);
                $("#txtage").val(data[0].age);
                $("#btnsave").val("Update");
                Idd = empid;
            },
            error: function () {
                alert('Data Not Edited !!');
            }
        });
    }</script>

